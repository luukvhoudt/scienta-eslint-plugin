{
	"compilerOptions": {
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"noImplicitReturns": true,
		"pretty": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"lib": [
			"es2017",
			"es2020"
		],
		"paths": {}
	},
	"exclude": [
		"node_modules"
	]
}
